---
import { Image } from 'astro:assets';
import gosimLogo from '../assets/images/icons/gosim-logo.svg';
import headerBg from '../assets/images/header/hangzhou-temple_2.jpg';
---

<header class="page-header" style={`--header-bg: url('${headerBg.src}')`}>
  <div class="header-content">
    <div class="title-container">
      <h1 class="title-line">GOSIM</h1>
      <h1 class="title-line yellow">HANGZHOU 2025</h1>
    </div>
    <img src={gosimLogo.src} alt="GOSIM Logo" class="logo" />
  </div>
  <div class="event-info-section">
    <div class="info-item">
      <svg class="info-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
        <circle cx="12" cy="10" r="3"></circle>
      </svg>
      <span class="location">杭州白金汉爵大酒店</span>
    </div>
    <div class="info-item">
      <svg class="info-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
        <line x1="16" y1="2" x2="16" y2="6"></line>
        <line x1="8" y1="2" x2="8" y2="6"></line>
        <line x1="3" y1="10" x2="21" y2="10"></line>
      </svg>
      <span class="date">2025年9月13-14日</span>
    </div>
  </div>
</header>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap');
  
  .page-header {
    width: 100%;
    max-width: 480px;
    margin: 0 auto;
    background: 
      linear-gradient(to right, rgba(245, 188, 216, 1) 0%, rgba(245, 188, 216, 0.98) 20%, rgba(245, 188, 216, 0.95) 40%, rgba(169, 229, 207, 0.6) 60%, rgba(169, 229, 207, 0.3) 100%),
      var(--header-bg);
    background-size: cover;
    background-position: 80% bottom;
    padding: 1.5rem;
    margin-bottom: 0;
    border-radius: 0;
    position: relative;
  }
  
  .header-content {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    padding: 0;
    position: relative;
  }
  
  .title-container {
    display: flex;
    flex-direction: column;
    line-height: 0.9;
    text-align: left;
  }
  
  .logo {
    height: 18px;
    width: auto;
    filter: brightness(0) invert(1);
    position: absolute;
    right: 0.5rem;
    top: 0.5rem;
    transform: none;
  }
  
  .title-line {
    font-family: 'Bebas Neue', sans-serif;
    color: white;
    font-size: 3rem;
    font-weight: 400;
    margin: 0;
    letter-spacing: 2px;
    padding-left: 0;
    text-transform: uppercase;
  }
  
  .title-line.yellow {
    color: #f9e9cd;
  }
  
  .event-info-section {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    padding: 1rem 0 0 0;
  }
  
  .info-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  
  .info-icon {
    width: 16px;
    height: 16px;
    color: #fff;
    flex-shrink: 0;
    background: transparent;
    background-color: transparent;
    fill: none;
  }
  
  .location {
    font-size: 1.1rem;
    font-weight: 600;
    color: #fff;
  }
  
  .date {
    font-size: 1rem;
    color: #fff;
  }
  
  @media (max-width: 480px) {    
    .logo {
      height: 15px;
      right: 0.3rem;
      top: 0.3rem;
    }
    
    .title-line {
      font-size: 2.5rem;
      padding-left: 0;
    }
  }
</style>