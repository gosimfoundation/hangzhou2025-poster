---
import { Image } from 'astro:assets';
import { getSpeakerPhoto } from '../data/speakerPhotos.js';
import { getSpeakerRole } from '../data/speakerRoles.js';

export interface Props {
  number: number;
  name: string;
  title: string;
  abstract: string;
}

const { number, name, title, abstract } = Astro.props;
const photoFileName = getSpeakerPhoto(name);
const role = getSpeakerRole(name);

let speakerImage = null;
if (photoFileName) {
  try {
    const images = import.meta.glob<{ default: ImageMetadata }>('/src/assets/images/embodied-ai/*.{jpg,jpeg,png,webp}');
    const imagePath = `/src/assets/images/embodied-ai/${photoFileName}`;
    if (images[imagePath]) {
      speakerImage = await images[imagePath]();
    }
  } catch (e) {
    console.log(`Could not load image for ${name}`);
  }
}
---

<div class={`speaker-card ${number % 2 === 0 ? 'photo-right' : 'photo-left'}`}>
  <div class="card-header">
    {speakerImage && (
      <div class="speaker-photo">
        <Image 
          src={speakerImage.default} 
          alt={name}
          width={240}
          height={240}
          format="webp"
          quality={90}
        />
      </div>
    )}
    {!speakerImage && (
      <div class="speaker-photo-placeholder">
        <div class="initials">
          {name.split(' ').map(n => n[0]).join('').toUpperCase()}
        </div>
      </div>
    )}
    <div class="speaker-info">
      <h3>{name}</h3>
      <div class="speaker-role">{role.length > 40 ? role.substring(0, 40) + '...' : role}</div>
      <div class="talk-title">{title}</div>
    </div>
  </div>
</div>

<style>
  .speaker-card {
    padding: 0.7cm;
  }
  
  .card-header {
    display: flex;
    align-items: center;
    gap: 1.5cm;
  }
  
  .speaker-card.photo-right .card-header {
    flex-direction: row-reverse;
  }
  
  .speaker-photo {
    flex-shrink: 0;
    width: 100px;
    height: 100px;
    border-radius: 30px;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .speaker-photo :global(img) {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center top;
  }
  
  .speaker-photo-placeholder {
    flex-shrink: 0;
    width: 100px;
    height: 100px;
    border-radius: 30px;
    background: rgba(255, 255, 255, 0.2);
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .initials {
    font-size: 2rem;
    font-weight: bold;
    color: #333;
    opacity: 0.9;
  }
  
  .speaker-role {
    font-size: 1cm;
    color: #666;
    opacity: 0.9;
    margin-top: 0.2cm;
    margin-bottom: 0.3cm;
    line-height: 1.2;
    padding-bottom: 0.5cm;
    border-bottom: 0.1cm solid #e0e0e0;
  }
  
  .speaker-info h3 {
    margin-bottom: 0;
  }
  
  .talk-title {
    font-size: 1.2cm;
    color: #333;
    opacity: 0.95;
    line-height: 1.3;
    margin-top: 0.5cm;
    font-weight: bold;
  }
</style>