---
import Layout from '../layouts/Layout.astro';
import HeaderWithHighlights from '../components/HeaderWithHighlights.astro';
import Topics from '../components/Topics.astro';
import SpeakerPoster from '../components/SpeakerPoster.astro';
import Footer from '../components/Footer.astro';
import { getSpeakers } from '../data/parseSpeakers.js';

const speakers = getSpeakers();
---

<Layout title="GOSIM Embodied AI - Speaker Posters">
  <div class="page-wrapper">
    <HeaderWithHighlights />
    <Topics />
  <main class="container" style="overflow: visible;">
    <div class="speakers-title-section">
      <h1 class="title-chinese">具身智能</h1>
      <h3 class="title-english">Embodied AI</h3>
      <h2 class="title-guests">— 特邀嘉宾 —</h2>
    </div>
    <div class="speakers-container">
      {speakers.map((speaker, index) => (
        <SpeakerPoster
          number={index + 1}
          name={speaker.name}
          title={speaker.title}
          abstract={speaker.abstract}
        />
      ))}
    </div>
  </main>
  <Footer />
  </div>
</Layout>

<style>
  .page-wrapper {
    max-width: 480px;
    margin: 0 auto;
    background: linear-gradient(to right, #f5bcd8 0%, #a9e5cf 100%);
  }

  .speakers-title-section {
    background: transparent;
    padding: 2rem 1rem;
    text-align: center;
    width: 100%;
    max-width: 480px;
    margin: 0 auto;
    position: relative;
    overflow: hidden;
  }
  
  .speakers-title-section::before,
  .speakers-title-section::after {
    content: '';
    position: absolute;
    width: 40px;
    height: 40px;
    background: #f4f593;
    opacity: 0.2;
    clip-path: polygon(
      50% 0%,
      60% 40%,
      100% 50%,
      60% 60%,
      50% 100%,
      40% 60%,
      0% 50%,
      40% 40%
    );
    pointer-events: none;
  }
  
  .speakers-title-section::before {
    top: 15px;
    left: 30px;
    transform: rotate(30deg);
  }
  
  .speakers-title-section::after {
    bottom: 20px;
    right: 25px;
    transform: rotate(-45deg);
    background: #adffce;
    opacity: 0.15;
  }

  .title-chinese {
    font-size: 2.5rem;
    font-weight: bold;
    color: #333;
    margin: 0 0 0.5rem 0;
    font-family: 'Noto Sans SC', sans-serif;
  }

  .title-english {
    font-size: 1.2rem;
    color: #666;
    margin: 0 0 1rem 0;
    font-weight: normal;
  }

  .title-guests {
    font-size: 1.8rem;
    color: #333;
    margin: 0;
    font-family: 'Noto Sans SC', sans-serif;
  }
</style>